.page {
  height: 100%;
  width: 100%;
  position: fixed;
}

.head {
  width: 100%;
  height: auto;
  padding: 20rpx 20rpx;
}

.text-center {
  text-align: center;
}

.head-title {
  background: #f5f5f5;
}

.head-condition {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}

.icon-index {
  right: 20rpx;
  position: fixed;
}

.borders {
  border-left: 1px solid #e6e6e6;
  border-right: 1px solid #e6e6e6;
}

.slidownbottom {
  background: #fff;
  margin-top: 10rpx;
  padding: 10rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  height: 50%;
  overflow-y: scroll;
  position: fixed;
  bottom: 0;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.sdbitem {
  width: 119rpx;
  text-align: center;
  border: solid #ccc 1rpx;
  margin: 12rpx;
  justify-content: space-between;
  padding: 12rpx 19rpx 12rpx 19rpx;
}

@keyframes slidown {
  from {
    transform: translateY(0);
  }

  to {
    transform: translateY(100%);
  }
}

.slidown {
  animation: slidown 0.4s ease-in both;
}

@keyframes slidup {
  from {
    transform: translateY(100%);
  }

  to {
    transform: translateY(0%);
  }
}

.slidup {
  animation: slidup 0.4s ease-in both;
}

.hidden {
  display: none;
}

.fullbg {
  position: fixed;
  top: 0;
  z-index: 1;
  width: 100%;
  height: 50%;
  background: rgb(1, 1, 1);
  transition: all 2s;
  opacity: 0.2;
}

.fullopacity {
  opacity: 0.2;
}
