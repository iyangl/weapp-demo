<view class='container'>

  <view class='page'>
    <view class='head text-center' bindtap='indexLocation'>考试中
      <icon class='icon-index' type='info'></icon>
    </view>
    <view class='head head-title'>
      <view>时间很长的考试</view>
      <view class='head-condition'><text>不限时</text><text>学分：0</text><text>及格线：60%</text></view>
    </view>

    <view>
      <!-- <view class="fullbg {{state ?'hidden':''}}" bindtap="hidebg"></view> -->
      <view class="slidownbottom {{state ? 'slidown' : 'slidup'}} {{ hidden ? 'hidden' : ''}}">
        <block wx:for='{{qIndexs}}' wx:key='*this'>
          <view class='sdbitem borders'>{{item}}</view>
        </block>
      </view>
    </view>
  </view>



</view>